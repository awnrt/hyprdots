#!/bin/sh

# Prints the current microphone volume or ï„± if muted.

case $1 in
	1) kitty -e pulsemixer ;;
	3) notify-send "ğŸ¤ Microphone volume module" "\- Shows volume ğŸ™ï¸, ï„±  if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) kitty -e "$EDITOR" "$0" ;;
esac

vol="$(wpctl get-volume @DEFAULT_AUDIO_SOURCE@)"

# If muted, print ï„± and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo ï„± && exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 1)) ) icon="ğŸ™ï¸" ;;
	* ) echo ï„± && exit ;;
esac

echo "$icon $vol%"
