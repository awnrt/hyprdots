#!/bin/sh
var=$1
vol="$(wpctl get-volume @DEFAULT_SINK@)"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

sig() {
  if [ ! -n "$var" ]; then
    if [ -n "$flag" ] ; then
      echo "$icon"
    else
      case 1 in
	      $((vol >= 70)) ) icon="ðŸ”Š" ;;
	      $((vol >= 30)) ) icon="ðŸ”‰" ;;
	      $((vol >= 1)) ) icon="ðŸ”ˆ" ;;
	      * ) echo ðŸ”‡ && exit ;;
      esac
      echo "$icon $vol%"
    fi
  else
    if [ "$var" -eq 3 ]; then
      notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change."
    fi
  fi
  exit
}

[ "$vol" != "${vol%\[MUTED\]}" ] && icon="ðŸ”‡" && flag=1 && sig
vol="${vol#Volume: }"
vol="$(printf "%.0f" "$(split "$vol" ".")")"
sig
